<h1>Editing Book</h1>
<% if @book.errors.any? %>
<P><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved </p>
<ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%=message %></li>
    <% end %>
</ul>

<% end %>

<%=form_with model:@book, url:update_book_path(@book.id), method: :patch,local: true do |f| %>

  <div>
    <label>Title</label>
    <%=f.text_field :title %>
 </div>

 <div>
   <label>Body</label>
   <%=f.text_area :body %>
 </div>

  <div><%=f.submit 'Update Book' %></div>

  <span>
    <%=link_to 'Show',book_path(@book.id) %>
  </span>


 <span>
    <%=link_to 'Back',index_book_path%>
 </span>

<% end %>
